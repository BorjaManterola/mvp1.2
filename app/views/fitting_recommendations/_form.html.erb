<!-- app/views/fitting_recommendations/_form.html.erb -->
<%= form_with model: @fitting_recommendation, local: true do |form| %>
  <div class="form-group">
    <%= form.label :tipo, "Tipo de prenda:" %>
    <%= form.select :tipo, options_for_select(["Chaqueta", "Camisa", "Polera", "Poleron", "Pantalon", "Short", "Buzo"]), { prompt: "Select a type" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :user_id, "Usuario:" %>
    <%= form.collection_select :user_id, User.all, :id, :username, { prompt: "Select a user" }, class: "form-control" %>
  </div>

  <%= form.submit "Buscar", class: "btn btn-primary" %> 
  <%= link_to 'Back', root_path, class: "card-link btn btn-back" %>
<% end %>